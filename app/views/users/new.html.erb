<div class='admin-form'>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class='widget login-widget'>
                    
                    <div class='widget-content'>
                        <div class='padd'>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <h1 class="text-center">haha <span class="bold">Board</span></h1>
                                </div>
                            </div>
                            <%= form_for @user, :url => users_path,role:"form", class:"form-horizontal" ,:validate => true do |f| %>
                            <div class="bd-bg">
                                <div class='col-lg-12'>
                                    <%=f.text_field :name, :tabIndex => 1, class: "form-control", placeholder: "name" %>          
                                </div>
                                <hr>                           
                                                    
                                <div class='col-lg-12'>                        
                                    <%=f.password_field :password, :tabIndex => 3, class: "form-control", placeholder: "password"  %>
                                </div>
                                <hr>    
                                <div class='col-lg-12'>                            
                                <%=f.password_field :password_confirmation, :tabIndex => 4,  class: "form-control", placeholder: "confirmation" %>
                                </div>
                                    
                            </div>
                            <div class='col-lg-12'>                        
                                <%= f.submit t('signup'),:class=>'btn btn-danger btn-lg btn-block',:tabIndex => 5%>
                                <span class="bnt-bg"></span>
                                <%= t('or')%>
                                <%= link_to t('.already_have_account'), login_path %>
                            </div>
                                
                            <% end %>  
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>