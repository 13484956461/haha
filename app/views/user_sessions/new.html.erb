<div class='admin-form'>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class='widget login-widget'>                    
                    <div class='widget-content'>
                        <div class='padd'>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <h1 class="text-center">haha <span class="bold">Board</span></h1>
                                </div>
                            </div>
                            <%= form_tag user_sessions_path, class:"form-horizontal"  do  %>
                            <div class="bd-bg">
                                <div class='col-lg-12'>
                                    <%=text_field_tag :login,nil, :tabIndex => 1, class: "form-control", placeholder: t('.name_or_email') %>          
                                </div>
                                <hr>                                                       
                                <div class='col-lg-12'>                        
                                    <%=password_field_tag :password,nil, :tabIndex => 3, class: "form-control", placeholder: t('.password')   %>
                                </div>
                                                                                    
                               
                            </div>
                            <div class='col-lg-12'>                        
                                <%=check_box_tag :remember_me, 'yes', false, :tabIndex => 4%>
                                <%= t('.remember_me')%>
                            </div>    
                            <div class='col-lg-12'>                        
                                <%= submit_tag t('login'),:class=>'btn btn-danger btn-lg btn-block',:tabIndex => 5%>
                                <span class="bnt-bg"></span>
                                <%= t('or')%>
                                <%= link_to t('.not_signup_yet'), signup_path %>
                            </div>
                                
                            <% end %>  
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>